SELECT DISTINCT
    Workstation_Type
FROM
    Customer_Order co
JOIN
    Production_Order po ON co.Customer_Order_ID = po.Customer_Order_ID
JOIN
    Product_Production_Order ppo ON po.Order_ID = ppo.Production_Order_ID
JOIN
    Product p ON ppo.Product_ID = p.Product_ID
JOIN
    BOO boo ON p.Family_ID = boo.Product_Family_ID
JOIN
    Manufacturing_Operation mo ON boo.Manufacturing_Operation_ID = mo.Manufacturing_Operation_ID
JOIN
    Type_Industry ti ON mo.Manufacturing_Operation_ID = ti.Manufacturing_Operation_ID
JOIN
    Workstation_Type wt ON ti.Workstation_Type_ID = wt.Workstation_Type_ID
JOIN
    Workstation ws ON ws.Workstation_Type_ID = wt.Workstation_Type_ID
WHERE
    co.Customer_Order_ID = 5;