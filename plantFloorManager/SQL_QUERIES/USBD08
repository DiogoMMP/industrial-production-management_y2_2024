SELECT
    FP.Factory_Plant_ID,
    PF.Plant_Floor_ID,
    S.Station_ID,
    MO.Manufacturing_Operation_ID,
    MO.Operation_Description,
    TI.Type_Industry
FROM
    Factory_Plant FP
JOIN
    Plant_Floor PF ON FP.Factory_Plant_ID = PF.Factory_Plant_ID
JOIN
    Station S ON PF.Plant_Floor_ID = S.Plant_Floor_ID
JOIN
    Type_Station TS ON S.Station_ID = TS.Station_ID
JOIN
    Type_Industry TI ON TS.Type_Station_ID = TI.Type_Station_ID
JOIN
    Manufacturing_Operation MO ON TI.Manufacturing_Operation_ID = MO.Manufacturing_Operation_ID;